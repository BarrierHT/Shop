<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">

</head>

<body>

<%- include('../includes/navigation.ejs') %>

<main>

    <form class="login-form" action="/new-password" method="POST"> 
        <div class="title-box">
            <h3>Reset Password</h3>
        </div>

        <div class="form-control">
            <label for="password">New Password</label> 
            <% if(errorMessage.hasOwnProperty('password')){ %> 
                <div class="user-message user-message--error">
                    Error: <%= errorMessage.password %>
                </div>
            <% } %>  
            <input type="password" name="password"  placeholder="Write the password" id="password" value="<% oldInput? userData.confirmPassword : '' %>">
        </div>

        <div class="form-control">
            <label for="confirmPassword">Confirm New Password</label> 
            <% if(errorMessage.hasOwnProperty('confirmPassword')){ %> 
                <div class="user-message user-message--error">
                    Error: <%= errorMessage.confirmPassword %>
                </div>
            <% } %>
            <input type="password" name="confirmPassword"  placeholder="Write the password" id="confirmPassword" value="<% oldInput? userData.confirmPassword : '' %>">
        </div>
       
        <input type="hidden"  name="userToken" value="<%= userToken %>">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn" type="submit">Update Password</button>
    </form> 



</main>

<%- include('../includes/end.ejs') %>